<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/ButtonMain</item>
    </style>

    <style name="MenteeTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MenteeColorPrimary</item>
        <item name="colorPrimaryDark">@color/MenteeColorPrimaryDark</item>
        <item name="colorAccent">@color/MenteeColorAccent</item>
    </style>

    <style name="MentorTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MentorColorPrimary</item>
        <item name="colorPrimaryDark">@color/MentorColorPrimaryDark</item>
        <item name="colorAccent">@color/MentorColorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MenteeTheme.NoActionBar">
        <item name="colorPrimary">@color/MenteeColorPrimary</item>
        <item name="colorPrimaryDark">@color/MenteeColorPrimaryDark</item>
        <item name="colorAccent">@color/MenteeColorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MentorTheme.NoActionBar">
        <item name="colorPrimary">@color/MentorColorPrimary</item>
        <item name="colorPrimaryDark">@color/MentorColorPrimaryDark</item>
        <item name="colorAccent">@color/MentorColorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewTitle" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="TableViewSectionTitle" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TableViewSectionItem" parent="CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="TableViewBaseItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TableViewItemRowHeader" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TableViewItemRowContent" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">Text View</item>
    </style>

    <style name="TableTextItemRowContent" parent="android:Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:hint">Edit Text</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:background">#fff</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/ButtonMain</item>
    </style>

    <style name="MenteeAppDialogTheme" parent="AppDialogTheme">
        <item name="colorPrimary">@color/MenteeColorPrimary</item>
        <item name="colorPrimaryDark">@color/MenteeColorPrimaryDark</item>
        <item name="colorAccent">@color/MenteeColorAccent</item>
    </style>

    <style name="MentorAppDialogTheme" parent="AppDialogTheme">
        <item name="colorPrimary">@color/MentorColorPrimary</item>
        <item name="colorPrimaryDark">@color/MentorColorPrimaryDark</item>
        <item name="colorAccent">@color/MentorColorAccent</item>
    </style>

    <style name="TextViewBadgeIcon" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ButtonMain" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

</resources>
